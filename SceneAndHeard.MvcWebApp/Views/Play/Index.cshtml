@model IEnumerable<SceneCrm.Entities.Play>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Title
        </th>
        <th>
            PlayVolunteers
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlayId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PlayId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PlayId })
        </td>
        <td>
			@item.Title
        </td>
        <td>
			@(item.PlayVolunteers == null ? "None" : item.PlayVolunteers.Count.ToString())
        </td>
    </tr>
}

</table>


