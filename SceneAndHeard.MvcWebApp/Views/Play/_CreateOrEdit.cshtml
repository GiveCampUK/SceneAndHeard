@model SceneCrm.Entities.Play

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Title)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title)
</div>

<div class="editor-label">
    Student
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.StudentId, ((IEnumerable<SceneCrm.Entities.Student>)ViewBag.PossibleStudents).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Surname), 
        Value = option.StudentId.ToString(),
        Selected = (Model != null) && (option.StudentId == Model.StudentId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.StudentId)
</div>
