@model SceneCrm.Entities.Play

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Title)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title)
</div>

<div class="editor-label">
    Student
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.StudentId, ((IEnumerable<SceneCrm.Entities.Student>)ViewBag.PossibleStudents).Select(option => new SelectListItem {
    Text = (option == null ? "None" : (option.Name + " (" + option.StudentId+ ")")), 
        Value = option.StudentId.ToString(),
        Selected = (Model != null) && (option.StudentId == Model.StudentId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.StudentId)
</div>


<div class="editor-label">
    Production
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ProductionId, ((IEnumerable<SceneCrm.Entities.Production>)ViewBag.PossibleProductions).Select(option => new SelectListItem {
    Text = (option == null ? "None" : (option.Title)), 
        Value = (option == null)  ? "" : option.ProductionId.ToString(),
        Selected = (Model != null && option != null) && (option.ProductionId == Model.ProductionId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ProductionId)
</div>

@Html.Partial("_AllocateVolunteers", Model)