@model IEnumerable<SceneCrm.Entities.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Student", "Create", null, new { @class = "button big" })
</p>
<table>
    <tr>
        
        <th>
            Membership #
        </th>
        <th>
            First Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Course Count
        </th>
        <th>
            Play Count
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
			@item.MembershipNumber 
        </td>
        <td>
			@item.Forename
        </td>
        <td>
			@item.Surname
        </td>
        <td>
			@(item.CourseAttendances == null ? "None" : item.CourseAttendances.Count.ToString())
        </td>
         <td>
			@(item.Plays == null ? "None" : item.Plays.Count.ToString())
        </td>
        <td>
             <div class="button-group">
            @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, new { @class = "button primary pill icon edit" }) 
            @Html.ActionLink("Details", "Details", new { id = item.StudentId }, new { @class = "button primary pill icon log" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { @class = "button primary pill icon trash" })
            </div>
        </td>
    </tr>
}

</table>


