@model SceneCrm.Entities.Job

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Job</legend>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">CourseVolunteers</div>
    <div class="display-field">@(Model.CourseVolunteers == null ? "None" : Model.CourseVolunteers.Count.ToString())</div>

    <div class="display-label">PlayVolunteers</div>
    <div class="display-field">@(Model.PlayVolunteers == null ? "None" : Model.PlayVolunteers.Count.ToString())</div>

    <div class="display-label">ProductionVolunteers</div>
    <div class="display-field">@(Model.ProductionVolunteers == null ? "None" : Model.ProductionVolunteers.Count.ToString())</div>

    <div class="display-label">Volunteers</div>
    <div class="display-field">@(Model.Volunteers == null ? "None" : Model.Volunteers.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


