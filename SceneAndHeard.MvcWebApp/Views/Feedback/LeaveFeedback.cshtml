@model SceneAndHeardFeedback.Models.Feedback

@{
    ViewBag.Title = "LeaveFeedback";
}

<h2>Leave Feedback</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Feedback</legend>
        <div class="editor-label">
            Your name:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContactName)
            @Html.ValidationMessageFor(model => model.ContactName)
        </div>

        <div class="editor-label">
            Your feedback:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FeedbackText)
            @Html.ValidationMessageFor(model => model.FeedbackText)
        </div>

        <div class="editor-label">
            Your email address:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContactEmailAddress)
            @Html.ValidationMessageFor(model => model.ContactEmailAddress)
        </div>

        <div class="editor-label">
            Organisation Name:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrganisationName)
            @Html.ValidationMessageFor(model => model.OrganisationName)
        </div>
        <input type="hidden" value="@ViewBag.Id" />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
